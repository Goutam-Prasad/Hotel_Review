<% layout('layouts/boilerplate') %>

<h1 class="mb-3"><%= search_query %></h1>

<form action="/results/?" class="d-flex mb-3">
  <input
    class="form-control me-2"
    type="search"
    placeholder="Search ...."
    name="search_query"
    aria-label="Search"
    value="<%= search_query %>"
  />
  <button class="btn btn-outline-dark" type="submit">Search</button>
</form>

<% if (hotels.length===0) { %>
<img
  class="img-fluid d-flex"
  style="opacity: 0.3"
  src="/img/nothing_here_yet.png"
  alt=""
/>
<% } %> <% for( let hotel of hotels ) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if (hotel.images.length) { %>
      <img class="img-fluid" src="<%= hotel.images[0].index %>" alt="" />
      <% } else { %>
      <img src="/img/Camping Vector Illustration.png" alt="" />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= hotel.title %></h5>
        <p class="card-text"><%= hotel.description %></p>
        <p class="card-text">
          <small class="text-muted"> <%= hotel.location %> </small>
        </p>
        <a href="/hotels/<%= hotel._id %>" class="btn btn-primary"
          >View <%= hotel.title %>
        </a>
      </div>
    </div>
  </div>
</div>
<% } %>
